<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff">
    <ImageView android:id="@+id/message_item_icon"
               android:layout_width="30dp" android:layout_height="30dp"
               android:layout_alignParentLeft="true"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:src="@drawable/people_head"/>
    <TextView android:id="@+id/message_item_name"
              android:layout_width="match_parent" android:layout_height="wrap_content"
              android:layout_alignBottom="@+id/message_item_icon"
              android:text="正中"
              android:layout_marginLeft="10dp"
              android:textColor="#000"
              android:textSize="20sp"
              android:lines="1"
              android:ellipsize="end"
              android:layout_toLeftOf="@+id/message_item_time"
              android:layout_toRightOf="@+id/message_item_icon"/>
    <ToggleButton
            android:id="@+id/message_item_collection"
            android:layout_width="24dp" android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/collection_bt"
            />
    <TextView
            android:id="@+id/message_item_time" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="5月8日 12:00"
            android:layout_toLeftOf="@+id/message_item_collection"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:textColor="#555"
            android:textSize="14sp"
            android:layout_alignBottom="@+id/message_item_name"
            android:layout_marginBottom="5dp"
            />

    <TextView
            android:id="@+id/message_item_message" android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="你好！快乐撒大家分开了家收到了感觉可怜啥地方看空间看老师就；离开的价格阿斯兰的咖啡机阿卡丽快乐撒娇付款了撒娇sk快乐奥斯卡了几分算了开发就"
            android:layout_margin="10dp"
            android:textColor="#555"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/message_item_icon"
            />
    <View android:layout_below="@+id/message_item_message"
          android:layout_marginLeft="10dp"
          android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="#aaa"/>
</RelativeLayout>