<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:paddingBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="名字:"
        android:textColor="#000"
        android:id="@+id/hint_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="手机:"
        android:id="@+id/hint_number"
        android:layout_below="@+id/hint_name"
        android:layout_alignLeft="@id/hint_name"/>

    <EditText
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        android:hint=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_name"
        android:layout_toRightOf="@+id/hint_name"
        android:layout_alignBottom="@+id/hint_name" />

    <EditText
        android:layout_marginRight="32dp"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="11"
        android:id="@+id/dialog_number"
        android:layout_alignBottom="@+id/hint_number"
        android:layout_toRightOf="@+id/hint_number"
        android:layout_toEndOf="@+id/hint_number" />
</RelativeLayout>